@model AT_RafaelBrito_BirthdayManager.Models.Person;

@{
    ViewData["Title"] = "Update";
}

<h4>Editar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">
            <div class="form-row">
                <div class="col">
                    <label asp-for="Firstname" class="control-label">Nome</label>
                    <input asp-for="Firstname" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="Surname" class="control-label">Sobrenome</label>
                    <input asp-for="Surname" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Data de Nascimento</label>
                <input asp-for="Birthday" class="form-control" placeholder="MM/DD/YYYY" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar alterações" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para o Dashboard</a>
</div>